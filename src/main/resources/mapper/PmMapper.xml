    <sql id="selectColumns">
        pm_no       ,
        pm_rm_no    ,
        pm_cn       ,
        trsm_dir    ,
        pm_dsptch_dt,
        rd_yn       ,
        rd_dt       ,
        delete_yn   ,
        delete_dt
    </sql>

