    <select id="findAll"
        parameterType="java.lang.Integer"
        resultType="com.example.slowstep_pjt.pm.domain.PmResponse">
        SELECT  
            <include refid="selectColumns" /> 
        FROM    
            PM
        WHERE
            PM_RM_NO=#{pmRmNo}
            AND
            DELETE_YN=0
        ORDER BY   
            PM_DSPTCH_DT DESC
    </select>

    <delete id="deleteByPmNo"
        parameterType="java.lang.Integer">
    UPDATE PM
    SET 
        DELETE_YN   = 1 ,
        DELETE_DT = NOW() 
    WHERE 
        PM_NO = #{pmNo} 
    </delete>

    <select id="findByPmNo"
        parameterType="java.lang.Integer"
        resultType="com.example.slowstep_pjt.pm.domain.PmResponse">
        SELECT  
            <include refid="selectColumns" /> 
        FROM    
            PM
        WHERE
            PM_NO=#{pmNo}
    </select>

    <update id="updateRdYn"
        parameterType="java.lang.Integer">
        UPDATE PM
        SET 
            RD_YN   = 1,
            RD_DT = NOW()
        WHERE 
            PM_NO = #{pmNo} 
    </update>
</mapper>
